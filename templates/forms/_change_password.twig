{{ form_start(form, {'action': form_path, 'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}
    {{ form_widget(form._token) }}
    {{ form_widget(form.user_id) }}
    <div class="form-group">
        <label for="form-change-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            {{ form_widget(form.password.first) }}
        </div>
    </div>
    <div class="form-group">
        <label for="form-change-password_confirm" class="col-sm-2 control-label">Confirm Password</label>
        <div class="col-sm-10">
            {{ form_widget(form.password.second) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type='submit' class='btn btn-large btn-success'>Change Password</button>
        </div>
    </div>
</form>